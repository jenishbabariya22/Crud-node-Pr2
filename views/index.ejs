<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href=" https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <title>Document</title>
    <style>
        * {
            outline: none;
        }

        input {
            border: none;
        }
    </style>
</head>

<body>


    <!-- Vertically centered modal -->
    <!-- Button trigger modal -->





    <div class="container">

        <h1 class="text-center mt-5">ADD TASK </h1>



        <form method="post" action="/addrecord " class="my-5">
            <input type="hidden" name="editid" value="<%= transfer.userid %>">
            <div class="input-group mb-3 ">

                <input type="text" value="<%= transfer.task%>" name="task" class="form-control" placeholder="ADD TASK"
                    aria-label="Recipient's username" aria-describedby="button-addon2">
                <input type="submit" value="ADD TASK" class="btn btn-primary">
            </div>
        </form>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>NO</th>
                    <th>TASK</th>
                    <th>EDIT</th>
                    <th>DELETE</th>

                </tr>
            </thead>
            <tbody>
                <% record.map((val)=>{%>

                    <tr>
                        <td>
                            <%= val.userid%>
                        </td>
                        <td>
                            <%= val.task%>
                        </td>
                        <td>
                            <a class="btn btn-primary" href="/editrecord?editeid=<%= val.userid %>" onclick=""> <i
                                    class="fa-solid fa-pen-to-square"></i></a>
                        </td>
                        <td>
                            <a class="btn btn-danger" href="/deleterecord?deleteid=<%= val.userid %>"> <i
                                    class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>

                    <%})%>
            </tbody>
        </table>
    </div>


</body>

</html>